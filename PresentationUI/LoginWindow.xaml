<Window x:Class="PresentationUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="660" Width="990">
    
    <Grid x:Name="Grid_Login_Page">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
      
        <Canvas>
               <Button x:Name="Login"
                   
                    Width="120" 
                    Height="45" 
                    Background="#8B92D0"
                    FontSize="20"
                    Foreground="White"
                    Canvas.Left="820"
                    Canvas.Top="10"
                    Click="Login_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
        </Canvas>
    </Grid>
</Window>
